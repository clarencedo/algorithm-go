# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# For normal files
[*]
indent_style = tab
max_line_length = 100
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[{Makefile,*.go}]
indent_style = tab
indent_size = 4